{
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "webworker"],
    "jsx": "react-jsx",
    "jsxImportSource": "https://esm.sh/react@18.2.0/",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": []
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
} 