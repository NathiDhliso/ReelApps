{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@reelapps/*": ["packages/*/src"]
    }
  },
  "files": [],
  "references": [
    { "path": "./packages/types" },
    { "path": "./packages/supabase" },
    { "path": "./packages/auth" },
    { "path": "./packages/config" },
    { "path": "./packages/ui" }
  ]
}
